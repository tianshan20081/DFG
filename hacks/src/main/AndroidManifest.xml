<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gooker.hacks"
    android:installLocation="preferExternal"

    >

    <!-- android:installLocation="preferExternal" App 安装位置 -->
    
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.gooker.hacks"/>
    <application
        android:name=".HacksApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DelegateUI"
            android:label="@string/title_activity_delegate_ui" >
        </activity>
        <activity
            android:name=".LvHeaderUI"
            android:label="@string/title_activity_lv_header_ui" >
        </activity>
    </application>

</manifest>
