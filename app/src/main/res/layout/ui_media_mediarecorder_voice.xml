<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lySpeaked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvSpeakLength"
                android:layout_width="131dp"
                android:layout_height="31dp"
                android:background="@drawable/album_speak_bg"
                android:gravity="center"
                android:text="25&apos;&apos;"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ivSpeakDel"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:background="@drawable/album_speak_del" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSpeak"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:background="@drawable/mulity_speak"
            android:text="@string/pressTalk"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>