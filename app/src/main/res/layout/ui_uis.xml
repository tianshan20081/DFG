<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout style="@style/lyItem" >

                <Button
                    android:id="@+id/btnUICall"
                    style="@style/btnItem"
                    android:text="直接打电话" />

                <Button
                    android:id="@+id/btnUICallDial"
                    style="@style/btnItem"
                    android:text="将电话号码传入拨号程序" />
            </LinearLayout>

            <LinearLayout style="@style/lyItem" >

                <Button
                    android:id="@+id/btnUIOpenDial"
                    style="@style/btnItem"
                    android:text="打开拨号程序" />

                <Button
                    android:id="@+id/btnUISufferInternet"
                    style="@style/btnItem"
                    android:text="浏览网页" />
            </LinearLayout>

            <LinearLayout style="@style/lyItem" >

                <Button
                    android:id="@+id/btnUIEmailTo"
                    style="@style/btnItem"
                    android:text="向Email 客户端传递 Email 地址" />

                <Button
                    android:id="@+id/btnUISendEmail"
                    style="@style/btnItem"
                    android:text="向Email:zhangshch2008@qq.com 发送邮件" />
            </LinearLayout>

            <LinearLayout style="@style/lyItem" >

                <Button
                    android:id="@+id/btnUIContects"
                    style="@style/btnItem"
                    android:text="查看联系人" />

                <Button
                    android:id="@+id/btnUISysSetting"
                    style="@style/btnItem"
                    android:text="显示系统设置页面" />
            </LinearLayout>

            <LinearLayout style="@style/lyItem" >

                <Button
                    android:id="@+id/btnUIWifiSetting"
                    style="@style/btnItem"
                    android:text="显示 WIFI 设置页面" />

                <Button
                    android:id="@+id/btnUIAudio"
                    style="@style/btnItem"
                    android:text="启动音频处理程序" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>