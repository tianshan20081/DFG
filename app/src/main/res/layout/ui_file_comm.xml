<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compression" />

        <Button
            android:id="@+id/btnDeCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeCompression" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnComMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CompressionMore" />

        <Button
            android:id="@+id/btnDeComMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeCompressionMore" />
    </LinearLayout>

</LinearLayout>