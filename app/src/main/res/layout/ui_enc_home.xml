<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnDesEnc"
                style="@style/btnItem"
                android:text="Des加密" />

            <Button
                android:id="@+id/btnDesDec"
                style="@style/btnItem"
                android:text="DES解密" />
        </LinearLayout>
        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnJavaMD5"
                style="@style/btnItem"
                android:text="JavaMD5" />

            <Button
                android:id="@+id/btnCppMD5"
                style="@style/btnItem"
                android:text="CppMD5" />
        </LinearLayout>
        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnJavaMD5Salt"
                style="@style/btnItem"
                android:text="JavaMD5Salt" />

            <Button
                android:id="@+id/btnCppMD5Salt"
                style="@style/btnItem"
                android:text="CppMD5Salt" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>